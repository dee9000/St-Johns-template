

    //play pause


   var ppbutton = document.getElementById("vidbutton");
   ppbutton.addEventListener("click", playPause);
   myVideo = document.getElementById("myvid");
   function playPause() {
       if (myVideo.paused) {
           myVideo.play();
           ppbutton.innerHTML = '<i class="fa fa-pause" aria-hidden="true"></i>';
           }
       else  {
           myVideo.pause();
           ppbutton.innerHTML = '<i class="fa fa-play" aria-hidden="true"></i>';
           }
   }

